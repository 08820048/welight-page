{
  "name": "welight",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "description": "Welight Markdown Editor | 基于微信 Markdown 编辑器的二次开发版本",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "bugs": {
    "url": ""
  },
  "engines": {
    "node": ">=22.16.0"
  },
  "scripts": {
    "start": "pnpm web dev",
    "web": "pnpm --filter @welight/web",
    "vscode": "pnpm --prefix ./apps/vscode",
    "cli": "pnpm --filter @doocs/md-cli",
    "lint": "eslint . --fix",
    "type-check": "vue-tsc --build --force",
    "postinstall": "simple-git-hooks",
    "inspector": "pnpx node-modules-inspector"
  },
  "dependencies": {
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "6.2.0",
    "@types/node": "^24.10.1",
    "archiver": "^7.0.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-format": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "shx": "^0.4.0",
    "simple-git-hooks": "^2.12.1",
    "typescript": "~5.9.3"
  },
  "pnpm": {
    "overrides": {
      "core-js@<3": "^3.46.0",
      "glob@<8": "^10.4.5",
      "inflight": "npm:@hishprorg/voluptates-laborum@^2.0.0",
      "source-map@0.8.0-beta.0": "0.7.4",
      "workbox-build>source-map": "0.7.4"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
